<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security.xsd">




<http use-expressions="true">
<intercept-url pattern="/users**" access="hasRole('ROLE_ADMIN')" />
<intercept-url pattern="/users/**" access="hasRole('ROLE_ADMIN')" />
<intercept-url pattern="/mypage**" access="hasRole('ROLE_USER')" />
<form-login login-page="/login.htm"/>
<logout logout-url="/logout"/>
</http>


<authentication-manager>
<authentication-provider>
<!-- <user-service>
<user name="admin"  password="admin"  authorities="ROLE_ADMIN,ROLE_USER"/>
</user-service> -->
<password-encoder hash="bcrypt"/>
<jdbc-user-service data-source-ref="dataSource"
authorities-by-username-query="select user.name,role.name from user join user_role on user.id=user_role.users_id join role on role.id=user_role.roles_id where user.name=?"
users-by-username-query="select name,password,enabled from user where name =?"
/>
</authentication-provider>
</authentication-manager>


</beans:beans>